{
    "name": "gtmassey/thread",
    "description": "A framework-agnostic helper library for easily manipulating Strings in PHP.",
    "keywords": [
        "gtmassey",
        "thread",
        "strings",
        "string manipulation",
        "string helpers",
        "php",
        "library"
    ],
    "homepage": "https://github.com/gtmassey/thread",
    "license": "MIT",
    "authors": [
        {
            "name": "Garrett Massey",
            "email": "contact@garrettmassey.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Gtmassey\\Thread\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gtmassey\\Thread\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "format": "./vendor/bin/pint",
        "pint": "./vendor/bin/pint",
        "analyze": "./vendor/bin/phpstan analyse src tests --level 8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
